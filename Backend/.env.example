# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password_here
DB_NAME=toco_clone

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=1d

# CORS Configuration - Frontend URLs
FRONTEND_URL=http://localhost:3000
PRODUCTION_URL=https://your-production-domain.com

# Email Configuration (for email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourapp.com

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# RajaOngkir API (for shipping cost calculation)
RAJAONGKIR_API_KEY=your_rajaongkir_api_key
RAJAONGKIR_COST_API_KEY=your_rajaongkir_cost_key
RAJAONGKIR_COST_BASE_URL=https://rajaongkir.komerce.id/api/v1

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Security Settings
# Maximum request body size (for DoS protection)
MAX_REQUEST_SIZE=10mb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=10
CHECKOUT_RATE_LIMIT_MAX=10

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/jpg

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false

# Cache Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application URLs
APP_URL=http://localhost:5000
FRONTEND_APP_URL=http://localhost:3000
